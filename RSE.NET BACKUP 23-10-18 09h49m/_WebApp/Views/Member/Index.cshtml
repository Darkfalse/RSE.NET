                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Debut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fin)
                </td>

                <td>
                    @Html.ActionLink("Editer", "EditProjet", new { id = item.Id }) |
                    @Html.ActionLink("Détails", "DetailsProjet", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>

