@model _WebApp.Models.ViewModels.MemberIndex

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="list-group">
    <p>
        @Html.ActionLink("Créer nouveau projet", "CreateProjet")
    </p>
    <table class="table">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.p.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.p.Description)
