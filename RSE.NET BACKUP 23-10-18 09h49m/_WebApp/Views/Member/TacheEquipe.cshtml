@model _WebApp.Models.ViewModels.MemberTacheEquipe

@{
    ViewBag.Title = "TacheEquipe";
}

<h2>TacheEquipe</h2>


<div>
    <h4>Tache - Equipe</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(Model => Model.te.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.te.Nom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.te.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.te.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.te.Debut)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.te.Debut)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.te.Fin)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.te.Fin)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.te.Final)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.te.Final)
        </dd>
    </dl>
</div>
<div class="list-group">
    <h4>Messages de la tâche</h4>
    <table class="table">
        @{int? dern = null;}
        @{int? ta = Model.te.Id;}

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.mt.Titre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mt.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mt.Contenu)
            </th>
            <th>
                Auteur
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.ListM)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Key.Titre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Key.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Key.Contenu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value.Nom) @Html.DisplayFor(modelItem => item.Value.Prenom)
                </td>
            </tr>
            dern = item.Key.Id;
        }

    </table>
    <br class="clearboth" />
    <div>
        <form action="~/Member/RepondreTacheEquipe" method="post">
            <input type="hidden" name="idTa" id="idTa" value='@ta' />
            <input type="hidden" name="idMsg" id="idMsg" value='@dern' />
            <input class="btnEnvoyez" type="text" size="4000" name="msg" id="msg" />
            <input class="btnEnvoyez" type="submit" name="Envoyer" value="Envoyez" />
        </form>
    </div>
</div>

<div class="list-group">
    <h4 class="menumilieu">Documents</h4>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.doc.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => Model.doc.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => Model.doc.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.doc.Lien)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model.ListD)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lien)
                </td>
            </tr>
        }

    </table>
</div>

<p>
    @Html.ActionLink("Retour", "Projet")
</p>

