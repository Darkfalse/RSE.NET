        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.chef.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.chef.Nom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.chef.Prenom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.chef.Prenom)
        </dd>
    </dl>
</div>

<div class="list-group">
    <h4>Taches employée</h4>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.t.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.t.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.t.Debut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.t.Fin)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.TacheEmployees) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Debut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fin)
                </td>
                <td>
                    @Html.ActionLink("Détails", "TacheEmployee", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>

<div class="list-group">
    <h4>Taches équipe</h4>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.t.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.t.Description)
            </th>
